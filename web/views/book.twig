{% extends "layout.html" %}

{% block content %}
<div class="jumbotron text-center">
  <div class="container">
    <h1>{{ book.data.bookName }}</h1>
    <p>ISBN : {{ book.data.isbn }}</p>
    <p>Stock : {{ book.data.stock }}</p>
    <form action="https://shopping-service-p2017.herokuapp.com/buy" method="put">
      <input type="hidden" name="isbn" value="{{ book.data.isbn }}">
      <div class="field_form_ppap">
        <input name="quantity" type="number" class="input-number-ppap" pattern="[0-9]*">
      </div>
      <div class="field_form_ppap">
        <button  type="submit" name="submit"  class="btn btn-lg btn-primary green"><span class="glyphicon glyphicons-cart-tick"></span>Acheter ce livre</button>
      </div>
    </form>
  </div>
</div>
{% endblock %}
