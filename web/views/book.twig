{% extends "layout.html" %}

{% block content %}
<div class="jumbotron text-center">
  <div class="container">
    <h1>{{ book.data.bookName }}</h1>
    <p>ISBN : {{ book.data.isbn }}</p>
    <p>Stock : {{ book.data.stock }}</p>
    <a type="button" class="btn btn-lg btn-primary" href="https://github.com/pipic1/booking-service-p2017"><span class="glyphicon glyphicon-download"></span> BookingService on GitHub</a>
  </div>
</div>
<div class="container">
  <div class="row">
    {{ dump(book) }}
  </div>
</div>
{% endblock %}
